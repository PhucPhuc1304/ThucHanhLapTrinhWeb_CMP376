@model IEnumerable<WebsiteBanHang.Models.Product>
<h2>Products</h2>
<table class="table align-middle">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Image</th>
            <th>Additional Images</th>
            <th>Actions</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Description</td>
                <td>
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@product.ImageUrl" alt="Product Image" width="100" height="100" />
                    }

                </td>
                <td>
                    @if (product.ImageUrls != null && product.ImageUrls.Count > 0)
                    {
                        <div class="additional-images">
                            @foreach (var imageUrl in product.ImageUrls)
                            {
                                <img src="@imageUrl" alt="Additional Image" width="100" height="100" />
                            }
                        </div>
                    }
                </td>
                <td>
                    <a asp-action="Display" asp-route-id="@product.Id">View</a> |
                    <a asp-action="Update" asp-route-id="@product.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@product.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>

</table>


