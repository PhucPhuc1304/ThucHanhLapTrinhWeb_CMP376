@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<WebsiteBanHang.Models.Product>

    <div class="row">
        <!-- Danh sách sản phẩm -->
        <div class="col-md-9">
            <!-- Hiển thị sản phẩm bằng dạng dòng sản phẩm sử dụng Bootstrap Row và Col -->
            <div class="row row-cols-1 row-cols-md-3 g-4">
                 @foreach (var product in Model)
                {
                <!-- Sản phẩm 1 -->
                <div class="col">
                    <div class="card">
                        <img src="@product.ImageUrl" class="card-img-top" alt="...">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="/Product/Display/@product.Id" target="_blank">@product.Name</a>
                            </h5>                            <p class="card-text">@product.Description</p>
                            <p class="card-text">@product.Price</p>
                            <a href="#" class="btn btn-primary">Mua Ngay</a>
                        </div>
                    </div>
                </div>
                }
                

        <!-- Sidebar -->
        <div class="col-md-3">
            <div class="bg-primary text-white p-3">
                <h5>Social Media</h5>
                <ul class="list-unstyled">
                    <li><a href="#">Facebook</a></li>
                    <li><a href="#">Twitter</a></li>
                    <li><a href="#">Instagram</a></li>
                    <li><a href="#">LinkedIn</a></li>
                </ul>
            </div>
        </div>
    </div>
