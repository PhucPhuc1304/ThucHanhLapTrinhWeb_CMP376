@model IEnumerable<Lab3.Models.Category>
<h2>Categories</h2>
<div>
    <a asp-action="Add" class="btn btn-primary">Add Category</a>
</div>
<table class="table align-middle">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>
                    <a asp-action="Display" asp-route-id="@category.Id" class="btn btn-info">View</a> |
                    <a asp-action="Update" asp-route-id="@category.Id" class="btn btn-warning">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
