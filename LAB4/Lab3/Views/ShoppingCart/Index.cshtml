@model ShoppingCart

<h2>Your Cart</h2>
<div class="container">
    <div class="row">
        <div class="col-xl-8">
            @foreach (var item in Model.Items)
            {
                <div class="card border shadow-none">

                    <div class="card-body">
                        <div class="d-flex align-items-start border-bottom pb-3">
                            <div class="me-4">
                                <img src="@item.Image" alt="" class="avatar-lg rounded">
                            </div>
                            <div class="flex-grow-1 align-self-center overflow-hidden">
                                <div>
                                    <h5 class="text-truncate font-size-18"><a href="#" class="text-dark">@item.Name</a></h5>
                                   
                                </div>
                            </div>
                            <div class="flex-shrink-0 ms-2">
                                <ul class="list-inline mb-0 font-size-16">
                                    <li class="list-inline-item">

                                        <form asp-controller="ShoppingCart" asp-action="RemoveFromCart" method="post" class="d-inline">
                                            <input type="hidden" name="productId" value="@item.ProductId" />
                                            <button type="submit" class="btn btn-link text-muted px-1" onclick="return confirm('Are you sure you want to remove this item from the cart?');">
                                                <i class="mdi mdi-trash-can-outline"></i>
                                            </button>
                                        </form>
                                    </li>
                           
                                </ul>
                            </div>
                        </div>

                        <div>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="mt-3">
                                        <p class="text-muted mb-2">Price</p>
                                        <h5 class="mb-0 mt-2">@item.Price</h5>
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <div class="mt-3">
                                        <p class="text-muted mb-2">Quantity</p>
                                        <div class="d-inline-flex">
                                            <form asp-controller="ShoppingCart" asp-action="UpdateQuantity" method="post">
                                                <input type="hidden" name="productId" value="@item.ProductId" />
                                                <input type="number" id="quantity" name="quantity" value="@item.Quantity" style="width: 100px;" />
                                                <button class="btn btn-primary" type="submit">Update</button>

                                            </form>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                    <div class="mt-3">
                                        <p class="text-muted mb-2">Total</p>
                                        <h5>@(item.Price * item.Quantity)</h5>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            }

            <div class="row my-4">
                <div class="col-sm-6">
                    <a asp-controller="ShoppingCart" asp-action="ClearCart" class="btn btn-link text-muted" onclick="return confirm('Are you sure you want to clear your cart?');">
                        <i class="mdi mdi-arrow-left me-1"></i> Clear Cart
                    </a>
                </div>

                <div class="col-sm-6">
       
                    <div class="text-sm-end mt-2 mt-sm-0">
                        <a asp-controller="ShoppingCart" asp-action="Checkout" class="btn btn-success" onclick="return confirm('Are you sure you want to checkout ?');">
                            <i class="mdi mdi-cart-outline me-1"></i> Checkout
                        </a>
                    </div>
                </div> <!-- end col -->
            </div> <!-- end row-->
        </div>

        <div class="col-xl-4">
            <div class="mt-5 mt-lg-0">
                <div class="card border shadow-none">
                    <div class="card-header bg-transparent border-bottom py-3 px-4">
                        <h5 class="font-size-16 mb-0">Order Summary <span class="float-end"></span></h5>
                    </div>
                    <div class="card-body p-4 pt-2">

                        <div class="table-responsive">
                            <table class="table mb-0">
                                <tbody>
                                    <tr>
                                        <td>Sub Total :</td>
                                        <td class="text-end">@ViewBag.TotalPrice</td>
                                    </tr>
                                    
                                </tbody>
                            </table>
                        </div>
                        <!-- end table-responsive -->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end row -->

</div>