@model List<Lab3.Models.Order>

<h1>Order List</h1>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>User</th>
            <th>Order Date</th>
            <th>Total Price</th>
            <th>Shipping Address</th>
            <th>Notes</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.UserId</td>
                <td>@order.OrderDate</td>
                <td>@order.TotalPrice</td>
                <td>@order.ShippingAddress</td>
                <td>@order.Notes</td>
                <td>
                    <a asp-controller="OrderManager" asp-action="Details" asp-route-id="@order.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
